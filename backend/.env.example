# BioMapper Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/biomapper
DB_NAME=biomapper_development

# Authentication
JWT_SECRET=your_super_secret_256_bit_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Google OAuth (Get from https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret

# External APIs
IUCN_API_TOKEN=your_iucn_red_list_api_token
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
HUGGINGFACE_API_KEY=hf_your_huggingface_token_here

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=AKIA_your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=biomapper-storage
AWS_REGION=us-east-1

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_QUANTUM_SIMULATION=false
ENABLE_FEDERATED_LEARNING=true
ENABLE_BLOCKCHAIN_AUDIT=false

# Python Services
PYTHON_ENGINE_URL=http://localhost:8001
FEDERATED_LEARNING_URL=http://localhost:8002
XAI_VISUALIZATION_URL=http://localhost:8003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/biomapper.log
